body {
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
  color: #2d2d2d;
  background: #dfdfdf;
  margin: 0;
}
h1,
h2,
h3,
h4,
h5,
h6 {
  font-family: "Open Sans", "Helvetica Neue", Helvetica, Arial, sans-serif;
  font-weight: 300;
}
p {
  font-weight: 300;
}

ul li { list-style: none; padding: 0;}

ul { list-style: none; padding: 0;}

#photo-grid li {
    float: left;
    padding: 2px;
}

#page-selection * {
    display: inline;
}

#image-container {
    text-align: center;
}

#image-container img {
    max-width: 800px;
}


#thumb-navigation {
    height: 200px;
}

#thumb-navigation li {
    display: inline;
}


#path-breadcrumb {
    margin: 0;
    position: relative;
    top:0;
    left: 0;
    background: #3B5998;
    color: #fff;
}

#path-breadcrumb a {
    color: #fff;
    text-decoration: none;
}

#path-breadcrumb a:hover {
    color: #ff0000;
}


a {
    color: #1f1f1f;
    text-decoration: none;
}

a:hover {
    color: #ff0000;
}
